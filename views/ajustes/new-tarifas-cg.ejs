  <body>
    
    <% if (user) { %>
      <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>
      
      <!-- NAV LG -->
      <nav class="navbar fixed-top navi">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - TARIFAS CAMPO GOLF</span>
          <%- include ('../partials/ajustes/navbar-lg.ejs') %> 
          
        </nav>
        
        <!-- NAV SM -->
        <nav class="navbar navSmall fixed-top">  
          <%- include ('../partials/ajustes/navbar-sm.ejs') %> 
        </nav>
    <% } %>  


    <div class="content">
      
      <div id="Tarifas" class="afterNav">   
        
        <div class="text-center mb-3">
          <h4 class="text-uppercase" id="titulo">Nueva tarifa Campo de Golf</h4>
        </div>

        <div class="cardEdit-container">
          <div class="card editShadow">
            <div class="card-body">

                <form id="rates-form" class="was-validated" action="/createRateMg" method="POST">
                  <div class="mb-3">
                    <label for="rate-title" class="form-label">Nombre de la tarifa</label>
                    <input type="text" class="form-control" name="nombre" placeholder="Escriba el nombre de la tarifa" required>
                    <div class="invalid-feedback">
                      Por favor escriba el nombre.
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="rate-price" class="form-label">Precio</label>
                    <input type="number" step="0.01" class="form-control" name="precio" placeholder="Monto de la tarifa" required>
                    <div class="invalid-feedback">
                      Por favor indique el precio.
                    </div>
                  </div>  
                  <label for="rate-opera" class="form-label">C贸digo OPERA </label>
                  <select class="form-select mb-3" name="cod_opera" aria-label="cliente-selector" required >
                    <option disabled selected value="">Elegir:</option>
                    <% results.forEach(code => { %>
                      <option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
                    <% }) %>
                  <!-- for loop code end -->
                  </select>
                  <div class="invalid-feedback opera-cd">
                    Elija el c贸digo de OPERA.  
                  </div>
                  <label for="rate-cliente" class="form-label">Tipo de cliente</label>
                  <select class="form-select mb-3" name="cliente" aria-label="cliente-selector" required >
                    <option selected disabled value="">Elegir:</option>
                    <option value="Hotel">Cliente Hotel</option>
                    <option value="Local">Local / Residente</option>
                    <option value="Extranjero">Extranjero</option>
                    <option value="Varios">Varios</option>
                  </select>
                  <div class="invalid-feedback opera-cd">
                    Por favor seleccione el tipo de cliente.
                  </div>
                  <div class="mb-3">
                    <label for="rate-tips" class="form-label">Descripci贸n</label>
                    <textarea class="form-control" id="tips" name="tips" rows="3" placeholder="Descripci贸n de la tarifa" required></textarea>
                    <div class="invalid-feedback">
                      Por favor escriba una descripcion de la tarifa.
                    </div>
                  </div>
                  
                  <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="submit" class="btn btn-success btnAdd editShadow" id="botonAdd">AGREGAR</button>
                    <a href="/ajustes/tarifas-conf" type="button" class="btn btn-danger btnCancel editShadow">CANCELAR</a>
                  </div>
                </form>
                </div>
                </div>
                </div>


      </div>

    </div>

    <%- include ('../partials/footer.ejs') %> 
  </body>
</html>
