<!DOCTYPE html>
<html lang="en">
	<%- include ('./partials/head-edits.ejs') %>

	<body class="loginPage">
		<div class="card mt-5 login-card">
			<span class="text-uppercase d-none" id="navbarLG">Login</span>
			<div>
				<img src="/img/golflogo.png" class="logo-login" alt="login-logo" />
				<h4 class="text-center mt-3 mb-3">Guía General</h4>
			</div>
			<form action="/login" method="POST">
				<div class="form-floating mb-3">
					<input type="text" class="form-control" name="user" id="login-user" placeholder="Usuario" autocomplete="username" onkeyup="mayus(this)" />
					<label for="login-user" class="form-label">Usuario</label>
				</div>
				<div class="form-floating mb-3">
					<input
						type="password"
						class="form-control"
						id="password"
						name="password"
						autocomplete="current-password"
						placeholder="Contraseña"
						id="login-pass" />
					<label for="password" class="form-label">Contraseña</label>
				</div>
				<% if (typeof errorMessage !== "undefined") { %>
				<p class="mt-4 text-center" style="color: red"><%= errorMessage %></p>
				<% } else { %>
				<hr class="mt-4" />
				<% } %>
				<button type="submit" class="btn btn-success text-uppercase w-100 mt-2 btnShadow">Entrar</button>
			</form>
		</div>

		<div class="container text-center fixed-bottom">
			<p class="text-light mt-2">© 2023 German Cruz - Reception Team</p>
		</div>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
			crossorigin="anonymous"></script>
		<script src="/js/main.js"></script>
	</body>
</html>
