<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<% if (user) { %> <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>

		<!-- NAV LG -->
		<nav class="navbar fixed-top navi">
			<div class="container-fluid">
				<span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - TTOO</span>
				<%- include ('../partials/ajustes/navbar-lg.ejs') %>
			</div>
		</nav>

		<!-- NAV SM -->
		<nav class="navbar navSmall fixed-top">
			<%- include ('../partials/ajustes/navbar-sm.ejs') %>
		</nav>
		<% } %>

		<div class="content">
			<div id="Tarifas" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase d-none" id="titulo">AJUSTES - TTOO</h4>
				</div>
				<div class="row d-flex justify-content-between">
					<div class="col-5">
						<a
							href="/ajustes/new-ttoo"
							type="button"
							class="btn btn-success btnAction btnShadow"
							id="btnService">
							AGREGAR
						</a>
						<!-- Button trigger modal -->
					</div>
					<div class="col-7" id="inputBuscar">
						<form role="search">
							<div class="input-group">
								<span class="input-group-text" id="basic-addon1"
									><i class="bi bi-search"></i
								></span>
								<input
									class="form-control"
									type="search"
									id="myInput"
									onkeyup="filtroBusqueda()"
									placeholder="Buscar TTOO"
									aria-label="Search" />
							</div>
						</form>
					</div>
				</div>

				<div class="card editShadow mt-4 tabla-desktop">
					<div class="card-body">
						<div class="table-responsive">
							<table class="table" id="myTable">
								<thead>
									<tr>
										<th scope="col" class="col">Nombre</th>
										<th scope="col" class="col">Precio</th>
										<th scope="col" class="col">Cod. Opera</th>
										<th scope="col" class="col" id="descripcion">Operación</th>
										<th scope="col" class="col-2">Acciones</th>
									</tr>
								</thead>
								<tbody>
									<% results.forEach((ttoo) => { %>
									<tr>
										<td data-titulo="nombre:"><%= ttoo.nombre %></td>
										<td data-titulo="precio:">USD <%= ttoo.precio%></td>
										<td data-titulo="Opera:"><%= ttoo.cod_opera%></td>
										<td data-titulo="Ticket:"><%= ttoo.operacion%></td>

										<td>
											<a
												href="/ajustes/ttoo-conf/<%= ttoo.id %>"
												data-bs-toggle="#"
												data-bs-target="#ttooUpdate"
												class="btn btn-sm btn-warning btnAction btnShadow"
												><i class="bi bi-pencil"></i
											></a>

											<a
												href="/ajustes/ttoo-conf/deleteTtoo/<%= ttoo.id %>"
												class="btn btn-sm btn-danger btnAction btnShadow"
												onclick="return confirm('Seguro que quiere borrar el Tour operador <%= ttoo.nombre %>?')"
												><i class="bi bi-trash"></i
											></a>
										</td>
									</tr>
									<% }) %>
								</tbody>
							</table>
						</div>
					</div>
				</div>

				<!-- *****************************MOBILE CARDS EDIT****************************** -->
				<div class="container tabla-mobile" id="tabla-mobile">
					<div
						class="row row-cols-1 row-cols-sm-1 row-cols-md-3 mt-3"
						id="servicesHomePage">
						<% results.forEach((ttoo) => { %>
						<div class="col">
							<div class="card mb-2 cardHome cardShadow" id="opera-codes">
								<div class="card-header fixSizeHeadEdit">
									<div class="my-0 text-center card-title">
										<%= ttoo.nombre %>
									</div>
								</div>
								<div class="card-body">
									<div class="accordion" id="accordionFlushExample">
										<div class="accordion-item">
											<h2 class="accordion-header" id="flush-headingOne">
												<button
													class="accordion-button collapsed"
													type="button"
													data-bs-toggle="collapse"
													data-bs-target="#flush-collapseOne<%= ttoo.id %>"
													aria-expanded="false"
													aria-controls="flush-collapseOne">
													Más Información
												</button>
											</h2>
											<div
												id="flush-collapseOne<%= ttoo.id %>"
												class="accordion-collapse collapse"
												aria-labelledby="flush-headingOne"
												data-bs-parent="#accordionFlushExample">
												<div class="accordion-body">
													<p>
														<strong>Código Opera: </strong><%= ttoo.cod_opera %>
													</p>
													<p>
														<strong>Descripción: </strong><%= ttoo.operacion %>
													</p>

													<hr />
													<div class="d-flex justify-content-between">
														<a
															href="/ajustes/ttoo-conf/<%= ttoo.id %>"
															data-bs-toggle="#"
															data-bs-target="#serviceUpdate"
															class="btn btn-sm btn-warning btnAction btnShadow"
															><i class="bi bi-pencil"></i
														></a>

														<a
															href="/ajustes/ttoo-conf/deleteTtoo/<%= ttoo.id %>"
															class="btn btn-sm btn-danger btnAction btnShadow"
															onclick="return confirm('Seguro que quiere borrar el Tour Operador <%= ttoo.nombre %>?')"
															><i class="bi bi-trash"></i
														></a>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<% }) %>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
