
  <%- include ('../partials/head-edits.ejs') %> 
  
  <body>
    
    <% if (user) { %>
      <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>
      
      <!-- NAV LG -->
      <nav class="navbar fixed-top navi">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - TTOO</span>
          <%- include ('../partials/ajustes/navbar-lg.ejs') %> 
          
        </nav>
        
        <!-- NAV SM -->
        <nav class="navbar navSmall fixed-top">  
          <%- include ('../partials/ajustes/navbar-sm.ejs') %> 
        </nav>
    <% } %>  

    <div class="content">
      
      <div id="Servicios" class="afterNav">
        
        <div class="text-center mb-3">
          <h4 class="text-uppercase" id="titulo">Editar TTOO</h4>
        </div>
        <div class="cardEdit-container">

          <div class="card editShadow">
            <div class="card-body">
                  <% if (ttoo) { %>
                  
                    <form id="services-form" action="/ajustes/ttoo-conf/<%= ttoo.id %>" method="POST">
                      <div class="mb-3">
                        <label for="ttoo-title" class="form-label">Nombre TTOO</label>
                        <input type="text" class="form-control" name="nombre" value="<%= ttoo.nombre %>" placeholder="Nombre del TTOO" required>
                      </div>
                      <div class="mb-3">
                        <label for="rate-price" class="form-label">Precio</label>
                        <input type="number" class="form-control" name="precio" value="<%= ttoo.precio %>" placeholder="Precio contratado" required>
                      </div> 
                      <div class="mb-3">
                        <label for="rate-opera" class="form-label">Código Opera</label>
                        <input type="number" class="form-control" name="cod_opera" value="<%= ttoo.cod_opera %>" placeholder="Código de Opera">
                      </div>    
                      <div class="mb-3">
                        <label for="rate-operacion" class="form-label">Operación</label>
                        <input type="text" class="form-control" name="operacion" value="<%= ttoo.operacion %>" placeholder="Cómo facturarlo:">
                      </div>    
                      
                      <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="submit" class="btn btn-warning btnEdit editShadow" id="modalServName">EDITAR</button>
                        <a href="/ajustes/ttoo-conf" class="btn btn-danger btnCancel editShadow">CANCELAR</a>
                      </div>
                    </form>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <footer>
            <hr>
            <div class="container">
              <div class="container">
                <img src="/img/golflogo.png" class="logoFoot" alt="">
              </div>
                  <p class="text-muted miFirma">© 2022 German Cruz - Reception Team</p>
            </div>
          </footer>
  
  
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
    <!-- <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="/js/services.js"></script>
    <script type="module" src="/js/rates.js"></script> -->
  </body>
</html>
