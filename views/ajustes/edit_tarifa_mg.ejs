<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<span class="d-none text-uppercase" id="navbar_titulo_pagina">AJUSTES - TARIFAS MINI GOLF</span>
		<!-- SIDEBAR DESKTOP -->
		<%- include ('../partials/sidebar_desktop_logged.ejs') %>

		<!-- NAVBAR DESKTOP -->
		<%- include ('../partials/navbar_desktop_logged.ejs') %>

		<!-- NAVBAR MOBILE -->
		<%- include ('../partials/sidenav_mobile_logged.ejs') %>

		<div class="content">
			<div id="Servicios" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase" id="titulo">Editar Tarifa Mini Golf</h4>
				</div>
				<div class="cardEdit-container">
					<div class="card editShadow">
						<div class="card-body">
							<% if (resultsRatesMg) { %>

							<form id="edit_form" action="/ajustes/edit_tarifa_mg/<%= resultsRatesMg.id %>" method="POST">
								<div class="form-floating mb-3">
									<input
										type="text"
										class="form-control"
										name="nombre"
										value="<%= resultsRatesMg.nombre %>"
										placeholder="Nombre de la tarifa"
										required />
									<label for="rate-title" class="form-label">Nombre de la tarifa</label>
								</div>
								<div class="row row-cols-1 row-cols-sm-2">
									<div class="col mb-3">
										<div class="form-floating">
											<input
												type="number"
												step="0.01"
												class="form-control"
												name="precio"
												value="<%= resultsRatesMg.precio %>"
												placeholder="Precio de tarifa "
												required />
											<label for="rate-price" class="form-label">Precio</label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating">
											<select class="form-select mb-3" name="cod_opera" aria-label="cliente-selector" required>
												<option selected value="<%= resultsRatesMg.cod_opera %>"><%= resultsRatesMg.cod_opera %></option>
												<% if (resultsCodes) { %> <% resultsCodes.forEach(code => { %>
												<option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
												<% }) %>
											</select>
											<label for="rate-opera" class="form-label">Código OPERA </label>
											<% } %>
										</div>
									</div>
								</div>
								<div class="form-floating mb-3">
									<textarea class="form-control" name="descripcion" style="height: 100px"><%=resultsRatesMg.descripcion %></textarea>
									<label for="serivce-description" class="form-label">Descripción</label>
									<!-- <div id="contador" class="mt-1"></div> -->
								</div>

								<div class="new-form-button">
									<button type="submit" class="btn btn-warning btnAction btnShadow" id="modalServName">EDITAR</button>
									<a href="/ajustes/conf_tarifas_mg" class="btn btn-danger btnAction btnShadow">CANCELAR</a>
								</div>
							</form>
							<% } %>
						</div>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
