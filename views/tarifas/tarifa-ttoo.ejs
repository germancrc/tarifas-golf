<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<% if (user) { %> <%- include ('../partials/tarifas/sidebar-tarifas.ejs') %>

		<!-- NAV LG -->
		<nav class="navbar fixed-top navi">
			<div class="container-fluid">
				<span class="navbar-brand mb-0 h1 text-uppercase" id="navbarLG">TARIFAS - TTOO </span>
				<%- include ('../partials/tarifas/navbar-lg-tar.ejs') %>
			</div>
		</nav>

		<!-- NAV SM -->
		<nav class="navbar navSmall fixed-top"><%- include ('../partials/tarifas/navbar-sm-tar.ejs') %></nav>
		<% } %>

		<div class="content">
			<div class="mb-3 afterNav">
				<form role="search">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
						<input
							class="form-control"
							type="search"
							id="myInput"
							onkeyup="filtroBusqueda(0.6)"
							placeholder="Buscar Tour Operador"
							aria-label="Search" />
					</div>
				</form>
			</div>

			<div class="card editShadow mt-2 tabla-desktop">
				<div class="card-body">
					<table class="table table-hover" id="myTable">
						<thead id="tabla-vacia">
							<tr>
								<th scope="col" class="col-4">Nombre</th>
								<th scope="col" class="col">Green Fee</th>
								<th scope="col" class="col">Twilight</th>
								<th scope="col" class="col">Opera</th>
								<th scope="col" class="col-4 hide-column">Operación</th>
							</tr>
						</thead>
						<tbody>
							<% results.forEach((ttoo) => { %>
							<tr class="info" onclick="alert('- <%= ttoo.nombre %> -\n Opera: <%= ttoo.cod_opera %> \n Como registrar:  <%= ttoo.operacion %>')">
								<td>
									<span><%= ttoo.nombre %></span>
									<div class="verInfo hide-column">
										- Ver Info
										<i class="bi bi-info-circle"></i>
									</div>
								</td>
								<td>USD <%= ttoo.green_fee%></td>
								<td>USD <%= ttoo.twilight%></td>
								<td><%= ttoo.cod_opera%></td>
								<% if(ttoo.operacion.length > 40) { %>
								<td class="hide-column hide-text"><%= ttoo.operacion.slice(0,40) %>...</td>
								<% } else { %>
								<td class="hide-column hide-text"><%= ttoo.operacion %></td>
								<% } %>
							</tr>
							<% }) %>
						</tbody>
					</table>
				</div>
			</div>

			<!-- *****************************MOBILE CARDS EDIT****************************** -->
			<div class="tabla-mobile" id="tabla-mobile">
				<div class="row row-cols-1 row-cols-sm-2" id="servicesHomePage">
					<% results.forEach((ttoo) => { %>
					<div class="col">
						<div class="card cardHome mb-4 cardShadow" id="serviceTest">
							<div class="card-header fixSizeHead">
								<div class="card-title my-0 text-center"><%= ttoo.nombre %></div>
							</div>
							<div class="card-body">
								<div class="text-center card-title row">
									<div class="col-4">GF: <strong><%= ttoo.green_fee %></strong></div>
									<div class="col-3">TW: <strong><%= ttoo.twilight %></strong></div>
									<div class="col-5">Cod: <strong><%= ttoo.cod_opera %></strong></div>
								</div>
								<div class="text-center">
									<div class="accordion" id="accordionFlushExample">
										<div class="accordion-item">
											<h2 class="accordion-header" id="flush-headingOne">
												<button
													class="accordion-button collapsed"
													type="button"
													data-bs-toggle="collapse"
													data-bs-target="#flush-collapseOne<%= ttoo.id %>"
													aria-expanded="false"
													aria-controls="flush-collapseOne">
													Cómo registrar:
												</button>
											</h2>
											<div
												id="flush-collapseOne<%= ttoo.id %>"
												class="accordion-collapse collapse"
												aria-labelledby="flush-headingOne"
												data-bs-parent="#accordionFlushExample">
												<div class="accordion-body"><%= ttoo.operacion %></div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<% }) %>
				</div>
			</div>

			<!-- <div class="form-center botonReload">
				<a class="btn btn-danger" href="/tarifas" id="backRates"> Cambiar tipo cliente</a>
			</div> -->
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
