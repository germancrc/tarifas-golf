<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<span class="d-none text-uppercase" id="navbar_titulo_pagina">AJUSTES - SERVICIOS</span>
		<!-- SIDEBAR DESKTOP -->
		<%- include ('../partials/sidebar_desktop.ejs') %>

		<!-- NAVBAR DESKTOP -->
		<%- include ('../partials/navbar_desktop.ejs') %>

		<!-- NAVBAR MOBILE -->
		<%- include ('../partials/sidenav_mobile.ejs') %>

		<div class="content">
			<div id="Servicios" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase" id="titulo">Editar Servicio</h4>
				</div>
				<div class="cardEdit-container">
					<div class="card editShadow">
						<div class="card-body">
							<% if (resultsServices) { %>

							<form id="edit_form" action="/ajustes/edit-servicio/<%= resultsServices.id %>" method="POST">
								<div class="form-floating mb-3">
									<input
										type="text"
										class="form-control"
										name="nombre"
										value="<%= resultsServices.nombre %>"
										placeholder="Nombre del servicio"
										required />
									<label for="service-title" class="form-label">Nombre del servicio:</label>
								</div>
								<div class="row row-cols-1 row-cols-sm-2">
									<div class="col">
										<div class="form-floating mb-3">
											<input
												type="number"
												class="form-control"
												name="precio"
												value="<%= resultsServices.precio %>"
												placeholder="Precio del servicio "
												required />
											<label for="serivce-price" class="form-label">Precio:</label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating mb-3">
											<select class="form-select mb-3" name="cod_opera" aria-label="cliente-selector" required>
												<option selected value="<%= resultsServices.cod_opera%>"><%= resultsServices.cod_opera%></option>
												<% if (resultsCodes) { %> <% resultsCodes.forEach(code => { %>
												<option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
												<% }) %>
											</select>
											<% } %>
											<label for="rate-opera" class="form-label">Código OPERA: </label>
										</div>
									</div>
								</div>

								<div class="form-floating mb-3">
									<textarea class="form-control" id="service-description" name="descripcion" style="height: 100px">
<%=resultsServices.descripcion %></textarea
									>
									<label for="service-description" class="form-label">Descripción:</label>
									<!-- <div id="contador" class="mt-1"></div> -->
								</div>

								<div class="new-form-button">
									<button type="submit" class="btn btn-warning btnAction btnShadow" id="modalServName">EDITAR</button>
									<a href="/ajustes/servicios-conf" class="btn btn-danger btnAction btnShadow">CANCELAR</a>
								</div>
							</form>
							<% } %>
						</div>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
