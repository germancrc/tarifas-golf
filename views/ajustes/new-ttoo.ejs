<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<% if (user) { %> <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>

		<!-- NAV LG -->
		<nav class="navbar fixed-top navi">
			<div class="container-fluid">
				<span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - TTOO</span>
				<%- include ('../partials/ajustes/navbar-lg.ejs') %>
			</div>
		</nav>

		<!-- NAV SM -->
		<nav class="navbar navSmall fixed-top"><%- include ('../partials/ajustes/navbar-sm.ejs') %></nav>
		<% } %>

		<div class="content">
			<div id="Servicios" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase" id="titulo">Nuevo Tour Operador</h4>
				</div>
				<div class="cardEdit-container">
					<div class="card editShadow">
						<div class="card-body">
							<form id="services-form" action="/createTtoo" method="POST">
								<div class="form-floating mb-3">
									<input type="text" class="form-control" name="nombre" placeholder="Escriba el nombre del TTOO" required />
									<label for="service-title" class="form-label">Nombre TTOO</label>
								</div>
								<div class="row row-cols-1 row-cols-sm-3">
									<div class="col">
										<div class="form-floating mb-3">
											<input type="number" class="form-control" name="green_fee" placeholder="Precio Green Fee" required />
											<label for="service-green_fee" class="form-label">Green Fee</label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating mb-3">
											<input type="number" class="form-control" name="twilight" placeholder="Precio Twilight" required />
											<label for="service-twiligt" class="form-label">Twilight</label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating">
											<select class="form-select mb-3" name="cod_opera" id="codOpera" aria-label="cliente-selector">
												<% results.forEach(code => { %>
												<option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
												<% }) %>
											</select>
											<label for="rate-opera" class="form-label">Código OPERA </label>
										</div>
									</div>
								</div>
								<div class="form-floating mb-3">
									<textarea class="form-control" name="operacion" placeholder="Descripción" style="height: 100px" required></textarea>
									<label for="TextareaService" class="form-label">Descripción</label>
								</div>

								<div class="new-form-button">
									<button type="submit" class="btn btn-success btnAction btnShadow" id="botonAdd">AGREGAR</button>
									<a href="/ajustes/ttoo-conf" class="btn btn-danger btnAction btnShadow">CANCELAR</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
