<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<% if (user) { %> <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>

		<!-- NAV LG -->
		<nav class="navbar fixed-top navi">
			<div class="container-fluid">
				<span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - TARIFAS CAMPO GOLF</span>
				<%- include ('../partials/ajustes/navbar-lg.ejs') %>
			</div>
		</nav>

		<!-- NAV SM -->
		<nav class="navbar navSmall fixed-top"><%- include ('../partials/ajustes/navbar-sm.ejs') %></nav>
		<% } %>

		<div class="content">
			<div id="Tarifas" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase d-none" id="titulo">AJUSTES - TARIFAS CAMPO GOLF</h4>
				</div>
				<div class="row">
					<div class="col-4">
						<a href="/ajustes/new-tarifas-cg" class="btn btn-success btnShadow" id="btnService"> AGREGAR </a>
						<!-- Button trigger modal -->
					</div>
					<div class="col-8" id="inputBuscar"><%- include ('../partials/buscar-conf.ejs') %></div>
				</div>
				<div class="text-center mt-3 mb-2 hide-column-message">
					<span>*Seleccione la Tarifa para ver su Descripción*</span>
				</div>

				<div class="card mt-3">
					<div class="card-body">
						<table class="table table-hover" id="myTable">
							<thead>
								<tr>
									<th scope="col" class="col-5 col-xl-3 px-0">Nombre</th>
									<th scope="col" class="col-1 hide-column">Precio</th>
									<th scope="col" class="col-1 hide-column">Opera</th>
									<th scope="col" class="col-1 hide-column">Cliente</th>
									<th scope="col" class="col hide-column">Descripción</th>
									<th scope="col" class="col-2">Acciones</th>
								</tr>
							</thead>
							<tbody>
								<% results.forEach((rate) => { %>
								<tr>
									<td
										class="hide-text info"
										onclick="alert('- <%= rate.nombre %> -\n\n Precio: <%= rate.precio%> USD | Opera: <% if (rate.cod_opera == 0) { %> <%= rate.cod_opera = `NO POST`%><% } else { %><%= rate.cod_opera%><% } %>\n\n Tipo Cliente: <%= rate.cliente%>\n\n <%= rate.tips %>')">
										<span class="editCenter"
											><%= rate.nombre %>
											<div class="verInfo">
												-
												<i class="bi bi-info-circle"></i></div
										></span>
									</td>
									<td class="hide-column"><%= rate.precio%>.00</td>
									<% if (rate.cod_opera == 0) { %>
									<td class="hide-column">NO POST</td>
									<% } else { %>
									<td class="hide-column"><%= rate.cod_opera%></td>
									<% } %>
									<td class="hide-column"><%= rate.cliente%></td>
									<td class="hide-column hide-text"><span><%= rate.tips %></span></td>

									<td class="d-flex justify-content-between">
										<a
											href="/ajustes/edit-tarifa/<%= rate.id %>"
											data-bs-toggle="#"
											data-bs-target="#rateUpdate"
											class="btn btn-sm btn-warning btnAction btnShadow"
											><i class="bi bi-pencil editShadow"></i
										></a>

										<a
											href="/ajustes/tarifas-conf/deleteRate/<%= rate.id %>"
											class="btn btn-sm btn-danger btnAction btnShadow"
											onclick="return confirm_delete()"
											><i class="bi bi-trash"></i
										></a>
									</td>
								</tr>
								<% }) %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
