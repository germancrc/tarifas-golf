
  <%- include ('../partials/head-edits.ejs') %> 
  
  <body>
    
    <% if (user) { %>
      <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>
      
      <!-- NAV LG -->
      <nav class="navbar fixed-top navi">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - CÓDIGOS OPERA</span>
          <%- include ('../partials/ajustes/navbar-lg.ejs') %> 
          
        </nav>
        
        <!-- NAV SM -->
        <nav class="navbar navSmall fixed-top">  
          <%- include ('../partials/ajustes/navbar-sm.ejs') %> 
        </nav>
    <% } %>  

    <div class="content">
      
      <div id="Servicios" class="afterNav">
        
        <div class="text-center mb-3">
          <h4 class="text-uppercase" id="titulo">Editar Servicio</h4>
        </div>
        <div class="cardEdit-container">

          <div class="card editShadow">
            <div class="card-body">
                  <% if (resultsServices) { %>
                  
                    <form id="services-form" action="/ajustes/servicios-conf/<%= resultsServices.id %>" method="POST">
                      <div class="mb-3">
                        <label for="service-title" class="form-label">Nombre del servicio</label>
                        <input type="text" class="form-control" name="nombre" value="<%= resultsServices.nombre %>" placeholder="Nombre del servicio" required>
                      </div>
                      <div class="mb-3">
                        <label for="serivce-price" class="form-label">Precio</label>
                        <input type="number" class="form-control" name="precio" value="<%= resultsServices.precio %>" placeholder="Precio del servicio " required>
                      </div>  
                      <div class="mb-3">
                      <label for="rate-opera" class="form-label">Código OPERA </label>
                      <select class="form-select mb-3" name="cod_opera" id="codOpera" aria-label="cliente-selector" required>
                        <option disabled selected value=""><%= resultsServices.cod_opera %></option>
                        <% if (resultsCodes) { %>
                          <% resultsCodes.forEach(code => { %>
                            <option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
                          <% }) %>
                        </select>
                        <% } %>
                      <div class="mb-3">
                        <label for="serivce-description" class="form-label">Descripción</label>
                        <textarea  class="form-control" name="descripcion" rows="3"><%=resultsServices.descripcion %></textarea>
                        <!-- <div id="contador" class="mt-1"></div> -->
                      </div>
                      
                      <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="submit" class="btn btn-warning btnEdit editShadow " id="modalServName">EDITAR</button>
                        <a href="/ajustes/servicios-conf" class="btn btn-danger btnCancel editShadow">CANCELAR</a>
                      </div>
                    </form>
                    <% } %>
                  </div>  
                  </div>
                </div>
              </div>
            </div>
          </div>

          <footer>
            <hr>
            <div class="container">
              <div class="container">
                <img src="/img/golflogo.png" class="logoFoot" alt="">
              </div>
                  <p class="text-muted miFirma">© 2022 German Cruz - Reception Team</p>
            </div>
          </footer>
  
  
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
    <!-- <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="/js/services.js"></script>
    <script type="module" src="/js/rates.js"></script> -->
  </body>
</html>
