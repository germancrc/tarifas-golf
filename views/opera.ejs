<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Hard Rock Golf PC - Guía de procedimientos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
  <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>

  <div class="sidebar scrollmenu">
    <div class="container mb-3 mt-3">
      <img src="/img/golflogo.png" class="logo" alt="">
    </div>
    <a href="/">Inicio <i class="bi bi-chevron-right flecha"></i></a>
    <a href="/tarifas">Tarifas <i class="bi bi-chevron-right flecha"></i></a>
    <a href="/ezlinks">EZLinks <i class="bi bi-chevron-right flecha"></i></a>
    <a href="/ezlinks-pos">EZLinks POS <i class="bi bi-chevron-right flecha"></i></a>
    <a class="active" href="/opera">OPERA <i class="bi bi-chevron-right flecha"></i></a>
    <a href="/origos">Origos <i class="bi bi-chevron-right flecha"></i></a>
    <a href="/eba">EBA <i class="bi bi-chevron-right flecha"></i></a>
    <a href="/minigolf">MINI GOLF <i class="bi bi-chevron-right flecha"></i></a>
    <% if(user.rol === "Admin"){ %>
    <a class="d-block" href="/ajustes">AJUSTES <i class="bi bi-chevron-right flecha"></i></a>
    <% } else { %>
    <a class="d-none" href="/ajustes">AJUSTES <i class="bi bi-chevron-right flecha"></i></a>
    <% } %>
  </div>

  <!-- As a heading -->
  <nav class="navbar fixed-top navi">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">OPERA</span>
      <div class="btn-group dropstart">
        <% if(user.rol === "Admin"){ %>
        <a class="btn btn-success dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
          aria-expanded="false">
          <span class="text-light "><i class="bi bi-person-fill"></i> <%= user.username %></span>
        </a>
        <% } else { %>
        <a class="btn btn-warning dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
          aria-expanded="false">
          <span class="text-dark "><i class="bi bi-person-fill"></i> <%= user.username %></span>
        </a>
        <% } %>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#">Editar</a></li>
          <li><a class="dropdown-item" href="/logout">Salir</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- NAV SM -->
  <nav class="navbar navSmall fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="bi bi-house"></i></a><span class="text-light">OPERA</span>
      <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
        aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation" onclick="openNav()">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="mySidenav" class="sidenav">
        <div id="main">
          <div class="dropdown btn-perfil">
            <% if(user.rol === "Admin"){ %>
            <button class="btn btn-success dropdown-toggle" href="#" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              <span class="text-light text-uppercase"></i><%= user.username %></span>
            </button>
            <% } else { %>
            <button class="btn btn-warning btn-sm dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              <span class="text-dark text-uppercase"><%= user.username %></span>
            </button>
            <% } %>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item text-dark" href="#">Editar</a></li>
              <li><a class="dropdown-item text-dark" href="/logout">Salir</a></li>
            </ul>
          </div>
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
          <a class="nav-link" href="/">Inicio</a>
          <a class="nav-link" href="/tarifas">Tarifas</a>
          <a class="nav-link" href="/ezlinks">EZLinks</a>
          <a class="nav-link" href="/ezlinks-pos">EZLinks POS</a>
          <a class="active" href="/opera">OPERA</a>
          <a class="nav-link" href="/origos">Origos</a>
          <a class="nav-link" href="/eba">EBA</a>
          <a class="nav-link" href="/minigolf">MINI GOLF</a>
          <% if(user.rol === "Admin"){ %>
          <a class="d-block" href="/ajustes">AJUSTES </a>
          <% } else { %>
          <a class="d-none" href="/ajustes">AJUSTES </a>
          <% } %>
        </div>
      </div>
    </div>
    </div>
  </nav>

  <div class="content">
    <h4 class="headerSmall p-3 text-center">
      OPERA
    </h4>
    <img src="/img/opera.png" class="bannerGolf afterNav center mobileLogo" alt="">
    <div class="container">
      <div class="text-center mt-2">
        <h5>Para posteo de los tickets e información de los clientes del hotel</h5>
      </div>
    </div>

    <button class="tablink" onclick="openPage('code', this, '#514d87')" id="defaultOpen">CODIGOS</button>
    <button class="tablink" onclick="openPage('use', this, '#514d87')">GUIA</button>
    
    <div class="card editShadow mt-2 w-100">
      <div class="card-body">
        <div id="code" class="tabcontent">
          <h3>Códigos Opera</h3>
            <div class="table-responsive">
              <table class="table table-striped" id="myTable">
                <thead id="tabla-vacia">
                  <tr>
                    <th scope="col" class="col-1">Código</th>
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col" class="col-2">Uso</th>
                    <th scope="col" class="col">Descripción</th>
                  </tr>
                </thead>
                <tbody>
                  <% results.forEach((code) => { %>
                    <tr>
                      <td><%= code.codigo %></td>
                      <td><%= code.nombre%></td>
                      <td><%= code.uso%></td>
                      <td>
                        <button class="btn btn-sm btn-success btnEdit" onclick="return alert('<%= code.codigo %> - <%= code.nombre %>: <%= code.descripcion %>')"><i class="bi bi-info-circle"></i></button></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
        </div>
    
        <div id="use" class="tabcontent">
          <h3>Uso</h3>
          <p>Van tutoriales</p>
        </div>
      </div>
    </div>


  </div>

  <footer>
    <hr>
    <div class="container foot">
      <div class="container">
        <img src="/img/golflogo.png" class="logoFoot" alt="">
      </div>
      <p class="text-muted miFirma">© 2022 German Cruz - Reception Team</p>
    </div>
  </footer>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
  </script>
  <script src="/js/main.js"></script>
  <!-- <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script type="module" src="/js/services.js"></script>
      <script type="module" src="/js/rates.js"></script> -->
</body>

</html>
