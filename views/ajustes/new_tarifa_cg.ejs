<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<span class="d-none text-uppercase" id="navbar_titulo_pagina">AJUSTES - TARIFAS CAMPO GOLF</span>
		<!-- SIDEBAR DESKTOP -->
		<%- include ('../partials/sidebar_desktop_logged.ejs') %>

		<!-- NAVBAR DESKTOP -->
		<%- include ('../partials/navbar_desktop_logged.ejs') %>

		<!-- NAVBAR MOBILE -->
		<%- include ('../partials/sidenav_mobile_logged.ejs') %>

		<div class="content">
			<div id="Tarifas" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase" id="titulo">Nueva tarifa Campo de Golf</h4>
				</div>

				<div class="cardEdit-container">
					<div class="card editShadow">
						<div class="card-body">
							<form id="add_new_form" action="/ajustes/crear_tarifa_cg" method="POST">
								<div class="form-floating mb-3">
									<input type="text" class="form-control" name="nombre" id="nombre" placeholder="Escriba el nombre de la tarifa" required />
									<label for="rate-title" class="form-label">Nombre de la tarifa:</label>
								</div>
								<div class="row row-cols-1 row-cols-sm-3">
									<div class="col">
										<div class="form-floating mb-3">
											<input type="number" class="form-control" name="precio" placeholder="Monto de la tarifa" required />
											<label for="rate-price" class="form-label">Precio:</label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating mb-3">
											<select class="form-select" name="cod_opera" aria-label="cliente-selector" required>
												<option disabled selected value="">Elegir:</option>
												<% results.forEach(code => { %>
												<option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
												<% }) %>
												<!-- for loop code end -->
											</select>
											<label for="rate-opera" class="form-label">Código OPERA: </label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating">
											<select class="form-select mb-3" name="cliente" aria-label="cliente-selector" required>
												<option selected disabled value="">Elegir:</option>
												<option value="Hotel">Cliente Hotel</option>
												<option value="Local">Local / Residente</option>
												<option value="Extranjero">Extranjero</option>
												<option value="Varios">Varios</option>
											</select>
											<label for="rate-cliente" class="form-label">Tipo de cliente:</label>
										</div>
									</div>
								</div>

								<div class="mb-3">
									<div class="form-floating">
										<textarea
											class="form-control"
											id="tips"
											name="tips"
											placeholder="Descripción de la tarifa"
											style="height: 100px"
											required></textarea>
										<label for="rate-tips" class="form-label">Descripción:</label>
									</div>
								</div>

								<div class="new-form-button">
									<button type="submit" class="btn btn-success btnAction btnShadow" id="botonAdd">AGREGAR</button>
									<a href="/ajustes/conf_tarifas_cg" class="btn btn-danger btnAction btnShadow">CANCELAR</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
