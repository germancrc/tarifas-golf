<!DOCTYPE html>
<html lang="en">
	<%- include ('../partials/head-edits.ejs') %>

	<body>
		<% if (user) { %> <%- include ('../partials/ajustes/sidebar-ajustes.ejs') %>

		<!-- NAV LG -->
		<nav class="navbar fixed-top navi">
			<div class="container-fluid">
				<span class="navbar-brand mb-0 h1" id="navbarLG">AJUSTES - TARIFAS MINIGOLF</span>
				<%- include ('../partials/ajustes/navbar-lg.ejs') %>
			</div>
		</nav>

		<!-- NAV SM -->
		<nav class="navbar navSmall fixed-top"><%- include ('../partials/ajustes/navbar-sm.ejs') %></nav>
		<% } %>

		<div class="content">
			<div id="Tarifas" class="afterNav">
				<div class="text-center mb-3">
					<h4 class="text-uppercase" id="titulo">Nueva tarifa Mini Golf</h4>
				</div>
				<div class="cardEdit-container">
					<div class="card editShadow">
						<div class="card-body">
							<form action="/createRateMg" method="POST">
								<div class="form-floating mb-3">
									<input type="text" class="form-control" name="nombre" placeholder="Escriba el nombre de la tarifa" required />
									<label for="rate-title" class="form-label">Nombre de la tarifa</label>
								</div>
								<div class="row row-cols-1 row-cols-sm-2">
									<div class="col">
										<div class="form-floating mb-3">
											<input type="number" step="0.01" class="form-control" name="precio" placeholder="Monto de la tarifa" required />
											<label for="rate-price" class="form-label">Precio</label>
										</div>
									</div>
									<div class="col">
										<div class="form-floating mb-3">
											<select class="form-select mb-3" name="cod_opera" aria-label="cliente-selector" required>
												<option disabled selected value="">Elegir:</option>
												<% results.forEach(code => { %>
												<option value="<%= code.codigo %>"><%= code.codigo %> - <%= code.nombre %></option>
												<% }) %>
												<!-- for loop code end -->
											</select>
											<label for="rate-opera" class="form-label">Código OPERA </label>
										</div>
									</div>
								</div>
								<div class="form-floating mb-3">
									<textarea class="form-control" name="descripcion" placeholder="Descripción de la tarifa" style="height: 100px" required></textarea>
									<label for="TextareaService" class="form-label">Descripción</label>
								</div>

								<div class="new-form-button">
									<button type="submit" class="btn btn-success btnAction btnShadow" id="botonAdd">AGREGAR</button>
									<a href="/ajustes/tarifas-mg" class="btn btn-danger btnAction btnShadow">CANCELAR</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<%- include ('../partials/footer.ejs') %>
		</div>
	</body>
</html>
